# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Email Configuration (for quote request notifications)
# These are required for the bot to send email notifications when users request quotes
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
LEAD_TO_EMAIL=futureai4all@gmail.com

# Optional: GitHub Personal Access Token (if using GitHub MCP server)
# GITHUB_TOKEN=your_github_token_here

# Conversation Logging (for reviewing user conversations)
# Logs are stored locally in /logs/conversations/ by default
ENABLE_CONVERSATION_LOGGING=true

# Optional: Enable manual push to GitHub (use push_logs_to_github.py script)
# ENABLE_GITHUB_LOGGING=false
# GITHUB_REPO=PINNACLEAISOLUTIONS/mcpaichatbot

# Optional: Custom MCP server environment variables
# Add any environment variables your custom MCP servers need

# Production Logging - set to WARNING to reduce log verbosity
# LOG_LEVEL=WARNING

# Voice Agent - Text-to-Speech (TTS)
# ElevenLabs (Primary) - Get key from: https://elevenlabs.io → Profile → API Key
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Google TTS (Fallback) - Get from: https://console.cloud.google.com → Enable Text-to-Speech API
GOOGLE_TTS_API_KEY=your_google_tts_key_here

# Groq API Key (for Whisper transcription)
# Get from: https://console.groq.com
GROQ_API_KEY=your_groq_key_here
