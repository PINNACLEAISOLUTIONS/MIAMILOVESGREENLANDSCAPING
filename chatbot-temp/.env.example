# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Email Configuration (Automated lead notifications)
# These are required for the bot to automatically email the team when leads are captured
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=miamilovesgreenlandscaping@gmail.com
SMTP_PASS=your_app_password_here
LEAD_TO_EMAIL=miamilovesgreenlandscaping@gmail.com

# Optional: GitHub Personal Access Token (for conversation log pushing)
# GITHUB_TOKEN=your_github_token_here
# GITHUB_REPO=MiamiLovesGreen/mcpaichatbot

# Conversation Logging
ENABLE_CONVERSATION_LOGGING=true

# Voice Agent - Text-to-Speech (TTS)
# ElevenLabs (Primary)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Groq API Key (for Whisper transcription)
GROQ_API_KEY=your_groq_key_here
